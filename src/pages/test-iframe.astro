---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <div class="flex flex-col items-center justify-center min-h-screen bg-gradient-to-br from-blue-50 to-purple-400 py-16">
        <h1 class="text-4xl md:text-5xl font-extrabold text-gray-900 text-center mb-10 select-none">
            Menu des espèces
        </h1>

        <nav class="mb-12">
            <ul class="flex flex-col md:flex-row gap-6 justify-center">
            <li>
                <a
                href="/species/Adelie"
                target="speciesFrame"
                class="inline-block px-8 py-4 rounded-xl bg-gradient-to-br from-blue-500 to-purple-500 text-white font-bold text-xl shadow-lg hover:scale-105 hover:from-blue-600 hover:to-purple-600 transition-all duration-200"
                >
                Manchot Adélie
                </a>
            </li>
            <li>
                <a
                href="/species/Chinstrap"
                target="speciesFrame"
                class="inline-block px-8 py-4 rounded-xl bg-gradient-to-br from-blue-500 to-purple-500 text-white font-bold text-xl shadow-lg hover:scale-105 hover:from-blue-600 hover:to-purple-600 transition-all duration-200"
                >
                Manchot Chinstrap
                </a>
            </li>
            <li>
                <a
                href="/species/Gentoo"
                target="speciesFrame"
                class="inline-block px-8 py-4 rounded-xl bg-gradient-to-br from-blue-500 to-purple-500 text-white font-bold text-xl shadow-lg hover:scale-105 hover:from-blue-600 hover:to-purple-600 transition-all duration-200"
                >
                Manchot Gentoo
                </a>
            </li>
            </ul>
        </nav>

        <div class="w-full max-w-5xl">
            <iframe
                id="speciesFrame"
                name="speciesFrame"
                src="/species/Adelie"
                class="w-full border-0 rounded-xl shadow-xl overflow-hidden bg-white"
                scrolling="no"
                height="700"
            ></iframe>
        </div>
    </div>
</Layout>
