---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div
    class="!flex !flex-col !items-center !justify-center !min-h-screen !bg-gradient-to-br !from-blue-50 !to-purple-400 !py-20 !px-2"
  >
    <h1
      class="!text-5xl !md:text-6xl !font-black !text-purple-700 !text-center !mb-12 !select-none !mt-20 !drop-shadow-md"
    >
      Menu des pages
    </h1>
    <nav class="!flex !flex-col !items-center !gap-8 !mt-10 !w-full">
      <ul class="!flex !flex-col !gap-6 !w-full !max-w-md">
        <li>
          <a
            href="/species"
            class="!block !w-full !text-xl !font-semibold !text-purple-800 !bg-white !bg-opacity-90 !hover:bg-purple-100 !px-6 !py-4 !rounded-2xl !shadow-lg !transition-all !duration-200 !transform !hover:scale-105 !text-center !backdrop-blur-sm !border !border-purple-200"
          >
            Page des espèces version 1
          </a>
        </li>
        <li>
          <a
            href="/test-iframe"
            class="!block !w-full !text-xl !font-semibold !text-purple-800 !bg-white !bg-opacity-90 !hover:bg-purple-100 !px-6 !py-4 !rounded-2xl !shadow-lg !transition-all !duration-200 !transform !hover:scale-105 !text-center !backdrop-blur-sm !border !border-purple-200"
          >
            Page des espèces version 2
          </a>
        </li>
        <li>
          <a
            href="/slider"
            class="!block !w-full !text-xl !font-semibold !text-purple-800 !bg-white !bg-opacity-90 !hover:bg-purple-100 !px-6 !py-4 !rounded-2xl !shadow-lg !transition-all !duration-200 !transform !hover:scale-105 !text-center !backdrop-blur-sm !border !border-purple-200"
          >
            Page des espèces version 3
          </a>
        </li>
        <li>
          <a
            href="/accessible"
            class="!block !w-full !text-xl !font-semibold !text-purple-800 !bg-white !bg-opacity-90 !hover:bg-purple-100 !px-6 !py-4 !rounded-2xl !shadow-lg !transition-all !duration-200 !transform !hover:scale-105 !text-center !backdrop-blur-sm !border !border-purple-200"
          >
            Page des espèces version 4
          </a>
        </li>
      </ul>
    </nav>
  </div>
</Layout>
