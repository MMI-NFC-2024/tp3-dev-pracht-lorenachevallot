---
import {
    Tabs,
    TabsList,
    TabsTab,
    TabsPanel,
} from "accessible-astro-components";
import Layout from "../layouts/Layout.astro";
import GraphicSpecies from "../components/GraphicSpecies.astro";
---

<Layout>
    <div
        class="flex flex-col items-center justify-center min-h-screen bg-gradient-to-br from-blue-50 to-purple-400 py-20 px-2"
    >
        <h1
            class="text-4xl md:text-5xl font-extrabold text-purple-700 text-center mb-12 select-none drop-shadow-md"
        >
            Esp√®ces de pingouins
        </h1>
        <Tabs
            class="!w-full !max-w-2xl !bg-white/80 !rounded-3xl !shadow-lg !p-8 !backdrop-blur-sm !transition-all !duration-300"
        >
            <TabsList class="!flex !justify-center !gap-6 !mb-10">
                <TabsTab
                    id="tab1"
                    controls="panel1"
                    selected
                    class="!px-7 !py-3 !rounded-full !font-semibold !text-lg !bg-gradient-to-r !from-purple-300 !to-fuchsia-300 !text-purple-900 !shadow !transition-all !duration-200 !hover:from-purple-400 !hover:to-fuchsia-400 !focus:!ring-4 !focus:!ring-fuchsia-300 !outline-none !border-none"
                    >Adelie</TabsTab
                >
                <TabsTab
                    id="tab2"
                    controls="panel2"
                    class="!px-7 !py-3 !rounded-full !font-semibold !text-lg !bg-gradient-to-r !from-purple-300 !to-fuchsia-300 !text-purple-900 !shadow !transition-all !duration-200 !hover:from-purple-400 !hover:to-fuchsia-400 !focus:!ring-4 !focus:!ring-fuchsia-300 !outline-none !border-none"
                    >Gentoo</TabsTab
                >
                <TabsTab
                    id="tab3"
                    controls="panel3"
                    class="!px-7 !py-3 !rounded-full !font-semibold !text-lg !bg-gradient-to-r !from-purple-300 !to-fuchsia-300 !text-purple-900 !shadow !transition-all !duration-200 !hover:from-purple-400 !hover:to-fuchsia-400 !focus:!ring-4 !focus:!ring-fuchsia-300 !outline-none !border-none"
                    >Chinstrap</TabsTab
                >
            </TabsList>
            <TabsPanel
                id="panel1"
                labelledby="tab1"
                selected
                class="!mt-6 !rounded-2xl !bg-white/60 !shadow-inner !p-4 !transition-all !duration-300"
            >
                <GraphicSpecies species="Adelie" />
            </TabsPanel>
            <TabsPanel
                id="panel2"
                labelledby="tab2"
                class="!mt-6 !rounded-2xl !bg-white/60 !shadow-inner !p-4 !transition-all !duration-300"
            >
                <GraphicSpecies species="Gentoo" />
            </TabsPanel>
            <TabsPanel
                id="panel3"
                labelledby="tab3"
                class="!mt-6 !rounded-2xl !bg-white/60 !shadow-inner !p-4 !transition-all !duration-300"
            >
                <GraphicSpecies species="Chinstrap" />
            </TabsPanel>
        </Tabs>
    </div>
</Layout>
